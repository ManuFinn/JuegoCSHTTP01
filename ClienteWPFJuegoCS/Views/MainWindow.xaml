<Window x:Class="ClienteWPFJuegoCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteWPFJuegoCS"
        xmlns:game="clr-namespace:ClasesJuegoCS.Game" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <game:GameClient/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center">
            <Label HorizontalAlignment="Center" Content="Introduce IP"/>
            <TextBox Width="200"/>
            <Button Margin="0 25 0 0" Content="Conectarse"/>

        </StackPanel>
        <UniformGrid Grid.Row="1" Rows="2" Columns="2">
            <Image></Image>
            <Image></Image>
            <Image></Image>
            <Image></Image>
        </UniformGrid>
        <StackPanel Grid.Row="2">
            <TextBox Margin="0 45 0 0" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
